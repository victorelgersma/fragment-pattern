<div>
  <p id="content">Hello</p>
  <button id="demo">Click</button>
</div>

<script>
  const button = document.getElementById("demo");

  async function getDemoFragment() {
    const demoPage = fetch(`/fragments/demoFragment`, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
    }).then((res) => res.text());

    Promise.all([demoPage]).then(([demoRes]) => {
      const content = document.getElementById("content");
      content.innerHTML = demoRes;
    });
  }

  button?.addEventListener("click", getDemoFragment);
</script>
